package by.jonline.ht05.main;

public class Task_06 {

	public static void main(String[] args) {

		int n = 6;
		int a[][] = new int[n][n];

		for (int i = 0; i < n / 2; i++) {
			for (int j = i; j < n - i; j++) {
				a[i][j] = 1;
				System.out.print(a[i][j] + " ");
			}
			;
			System.out.println();
		}
		;
		
		for (int k = n / 2; k < n; k++) {
			for (int l = n - k - 1; l < k + 1; l++) {
				a[k][l] = 1;
				System.out.print(a[k][l] + " ");
			}
			;
			System.out.println();
		}
		;
		

	}

}
