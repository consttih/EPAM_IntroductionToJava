package by.online.ht02.main;

import java.util.Scanner;

public class Task_21 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		String ans;
		int b, g;
		int h;
		
		b = 'B';
		g = 'G';
		
		System.out.println("Who are you: boy or girl. Input B or G");
		System.out.print(">> ");
		
		ans = sc.nextLine();
		h = Integer.parseInt(ans);
		System.out.println(h);
	
		if(h == g) {
			System.out.println("I love girls!");
			
		}else if(h == b) {
			System.out.println("I love boys!");
		}else {
			System.out.println("You should input only G or B");
		}
		}
		
	}

